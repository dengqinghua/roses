#!/usr/bin/env ruby
#
puts Time.now.to_s

if ARGV[0] == "r"
  puts "rm -rf output/**"
  `rm -rf output/**`
end

puts "bundle exec rake guides:generate"
`bundle exec rake guides:generate`

puts "============"

Dir["output/*.html"].each do |path|
  puts File.expand_path(File.dirname(__FILE__)) + "/" + path
end
